{
  "tasks": {
    // --unstable-unsafe-proto required for deno compat
    // https://github.com/vercel/next.js/issues/72591#issuecomment-2564798427
    "dev": "deno run --unstable-unsafe-proto -A --watch npm:next dev --turbo",
    "build": "deno run -A npm:next build",
    "start": "deno run -A npm:next start",
    "lint": "deno lint"
  },
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "deno.window"],
    "strict": true,
    "jsx": "react-jsx",
    "jsxImportSource": "npm:react",
    "jsxImportSourceTypes": "npm:@types/react"
  },
  "imports": {
    "@/": "./",
    "@kvs/node-localstorage": "npm:@kvs/node-localstorage@^2.2.0",
    "@langchain/anthropic": "npm:@langchain/anthropic@^0.3.12",
    "@langchain/core": "npm:@langchain/core@^0.3.36",
    "@langchain/groq": "npm:@langchain/groq@^0.1.3",
    "@langchain/openai": "npm:@langchain/openai@^0.4.2",
    "@preact/signals-core": "npm:@preact/signals-core@^1.8.0",
    "@preact/signals-react": "npm:@preact/signals-react@^3.0.1",
    "@radix-ui/react-label": "npm:@radix-ui/react-label@^2.1.1",
    "@tanstack/react-query-devtools": "npm:@tanstack/react-query-devtools@^5.64.2",
    "@trpc-chat-agent/core": "npm:@trpc-chat-agent/core@^0.4.4",
    "@trpc-chat-agent/langchain": "npm:@trpc-chat-agent/langchain@^0.4.4",
    "@trpc-chat-agent/react": "npm:@trpc-chat-agent/react@^0.4.4",
    "@trpc/server": "npm:@trpc/server@11.0.0-rc.718",
    "@trpc/react-query": "npm:@trpc/react-query@11.0.0-rc.718",
    "@trpc/client": "npm:@trpc/client@11.0.0-rc.718",
    "@trpc/next": "npm:@trpc/next@11.0.0-rc.718",
    "@types/async-lock": "npm:@types/async-lock@^1.4.2",
    "@types/node": "npm:@types/node@^22.10.10",
    "@types/react": "npm:@types/react@^19.0.8",
    "@types/react-dom": "npm:@types/react-dom@^19.0.3",
    "async-lock": "npm:async-lock@^1.4.1",
    "class-variance-authority": "npm:class-variance-authority@^0.7.1",
    "find-up": "npm:find-up@^7.0.0",
    "langfuse-langchain": "npm:langfuse-langchain@^3.32.3",
    "nanoid": "npm:nanoid@^5.0.9",
    "openai": "npm:openai@^4.80.1",
    "react": "npm:react@^19.0.0",
    "react-dom": "npm:react-dom@^19.0.0",
    "next": "npm:next@15.1.3",
    "@radix-ui/react-dialog": "npm:@radix-ui/react-dialog@1.1.5",
    "@radix-ui/react-progress": "npm:@radix-ui/react-progress@1.1.1",
    "@radix-ui/react-scroll-area": "npm:@radix-ui/react-scroll-area@1.2.2",
    "@radix-ui/react-slot": "npm:@radix-ui/react-slot@1.1.1",
    "@tanstack/react-query": "npm:@tanstack/react-query@5.62.15",
    "clsx": "npm:clsx@2.1.1",
    "lucide-react": "npm:lucide-react@0.469.0",
    "react-icons": "npm:react-icons@^5.4.0",
    "react-markdown": "npm:react-markdown@9.0.1",
    "react-syntax-highlighter": "npm:react-syntax-highlighter@^15.6.1",
    "remark-gfm": "npm:remark-gfm@^4.0.0",
    "tailwind-merge": "npm:tailwind-merge@^2.6.0",
    "tailwind-scrollbar": "npm:tailwind-scrollbar@^3.1.0",
    "tailwindcss": "npm:tailwindcss@3.4.1",
    "tailwindcss-animate": "npm:tailwindcss-animate@^1.0.7",
    "typescript": "npm:typescript@^5.7.3",
    "zod": "npm:zod@3.24.1"
  },
  "lint": {
    "include": ["./**/*.ts", "./**/*.tsx"],
    "exclude": ["node_modules/", ".next/", "dist/", "sandbox/"],
    "rules": {
      "exclude": ["no-explicit-any", "no-unused-vars", "require-await"]
    }
  },
  "fmt": {
    "include": ["./**/*.ts", "./**/*.tsx", "./**/*.json"],
    "exclude": ["node_modules/", ".next/", "dist/"],
    "lineWidth": 100,
    "indentWidth": 2,
    "singleQuote": true,
    "semiColons": true
  },
  "nodeModulesDir": "auto",
  "unstable": ["kv", "fs"]
}
